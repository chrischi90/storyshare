<%= div_for(comment) do %>
  <div class="comments-wrapper">
    <div>
      <p class="lead"><%= comment.body %></p>
      <p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.try!(:name) %></small></p>
    </div>

    <div class="btn-group pull-right">
      <% if comment.user == current_user %>
        <%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-sm btn-default" %>
        <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'}, class: "btn btn-default btn-sm" %>
      <% end %>
    </div>
  </div>
<% end %>
